#include <stdio.h>
#include <stdlib.>

int main(void) {
	int arr[] = {1,2,3,4,5,6};
	int size = 6;
	int number = 4;
	int m = arr[(size/2) - 1];

	for(int i = 0; i <= size || m == number; i++) {
		if (m == number) {
			printf("el numero esta en el medio y es: %i", m);
		} else if (number < m) {
			while (m != number) {
				m = m / 2;
			}
		} else if (number > m) {
		}

	}
}
